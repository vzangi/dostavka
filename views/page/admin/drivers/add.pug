extends /layout/whideTreeRows

block header 
	include ../header

block main
	div(class="container")

		div(class="d-flex align-items-center justify-content-between")
			div(class="d-flex align-items-center gap-2")
				a(href="/admin/drivers")
					i(class="bi bi-arrow-left fs-3") 
				h3(class="mb-0") Добавить курьера

		hr

		form(action="/admin/drivers/add" enctype="multipart/form-data" method="post")

			div(class="mb-3")
				label(class="form-label") Имя
				input(class="form-control" placeholder="Имя" name="username" required="") 

			div(class="mb-3")
				label(class="form-label") Логин
				input(class="form-control" placeholder="Логин" name="login" required="") 

			div(class="mb-3")
				label(class="form-label") Пароль
				input(class="form-control" placeholder="Пароль" name="pass" required="") 

			div(class="mb-3")
				label(class="form-label") Телефон
				input(class="form-control" placeholder="Телефон" name="phone" required="") 

			div(class="mb-3")
				label(class="form-label") Город
				select(class="form-control" name="cityId" required="")
					each city in cities 
						option(value=city.id)= city.name

			div(class="mb-3")
				label(class="form-label") Аватар
				input(type='file' name="avatar" class="form-control" accept=".jpg, .jpeg, .png")

			button(class="btn btn-success" type="submit") Добавить