mixin statusChecker(id, name, cls, checked)
  span(class=`badge status-checker status-${id} bg-${cls} bg-gradient${checked?' checked':''}` data-id=id)= name

div(class="filter-box mb-3" style="display:none1")
  div(class="row")
    div(class="col-4")
      div(class="md-3")
        h6 Статус
        div(class="statuses")
          +statusChecker(1, 'Ожидает', 'warning', true)
          +statusChecker(2, 'Принят', 'primary', true)
          +statusChecker(3, 'В пути', 'info', true)
          +statusChecker(4, 'Отдан', 'success')
          +statusChecker(5, 'Отменён', 'danger')

    div(class="col-4")
      div(class="md-3")
        h6 Города
        div(class="cities")
          span(class="badge bg-success ps-1 pe-1" title="Добавить город" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-html="true") 
            i(class="bi bi-plus-circle" data-bs-toggle="modal" data-bs-target="#cityAddForm")

  hr

  div(class="row") 
    div(class="col-12")
      button(class="btn btn-success btn-sm btn-start-filter" style="min-width:180px") Применить фильтр


include ./cityAddForm